<html>
  <head>
    <title>Students</title>
  </head>
    <body>
     <%= link_to "Sign Up", new_student path %>
      <% if current_student %>
      <h3>Welcome, <%= current_student.name %> </h3>
      <h1>Listing Students</h1> 
      <%= link_to 'New Student', new_student_path %> <!-- link to new post page-->
      <table cellpadding="3">
        <tr>
          <th></th>
          <th>Name</th>
          <th>Nickname</th>
          <th>Email</th>
        </tr>
 
        <% @student.each do |student| %> <!--at each post put links to show, edit, and delete-->
          <tr>
            <td><%= image_tag(student.image_url_with_fallback, size: "80x80") %></td>
            <td><%= student.name %></td>
            <td align="center"><%= student.nickname %></td>
            <td><%= mail_to student.email %></td>

            <td><%= link_to 'Show', student %></td> 
            <td><%= link_to 'Edit', edit_student_path(student) %></td>
            <td><%= link_to 'Destroy', student_path(student),method: :delete, data: { confirm: 'Are you sure?' } %></td>
 
          </tr>
        <% end %>
      </table>
 
  </body>
</html>
