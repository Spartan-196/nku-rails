<html>
   <head>
  </head>
  <body>
    <h1>Editing post</h1>
 
<%= form_for :post, url: post_path(@post), method: :patch do |f| %><!--Calls the ApplicationControllers that are prebuilt into rails for using forms and patches the existing page when done-->
  <% if @post.errors.any? %><!--Validation check for errors -->
  <div id="error_explanation"> <!-- if an error is returned. say so -->
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited
      this post from being saved:</h2><!--give error message with count of the errors folled by what they are in level 2 heading-->
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', posts_path %>

  </body>
</html>  